@page
@model Mokyklu_IS.Pages.LoginModel
@{
    ViewData["Title"] = "Log-In";
}

<div class="text-center">
    <form method="post">
        <div class="container">
            <h1>Prisijungimas</h1>
            <hr>

            <label for="prisijungimo_vardas"><b>Prisijungimo Vardas</b></label><br>
            <input type="text" placeholder="Įveskite Prisijungimo Vardą" name="pris_vardas" id="pris_vardas" required><br><br>

            <label for="psw"><b>Slaptažodis</b></label><br>
            <input type="password" placeholder="Įveskite Slaptažodį" name="psw" id="psw" required><br><br>

            <label for="psw"><b>@Model.Error</b></label><br>
            <hr>

            <button asp-route-ID="@Model.Registracija" type="submit" class="registerbtn">Prisijungti</button>
        </div>
    </form>
</div>
