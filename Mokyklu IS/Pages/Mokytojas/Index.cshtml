@page
@model Mokyklu_IS.Pages.Mokytojas.IndexModel
@{
    Layout = "/Pages/Shared/_MokytojasLayout.cshtml";
}
<div class="text-center">
    <div class="container">
        <h3 class="display-4">Klasės</h3>
            @if (Model.Klases.Count() > 0)
            {
    <table id="customers">
        <tr>
            <th>Klasė</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Ats)
        {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Pavadinimas)
                        </td>
                        <td>
                            <form style="display: inline" asp-area="" asp-page="/Mokytojas/Klase" asp-route-id="@item.Id_Klase" method="get">
                                <button class="registerbtn">Rinktis</button>
                            </form>
                        </td>
                    </tr>
        }
        </table>
            }
            else
            {
                <p>Duomenų bazėje nėra jokių klasių.</p>
            }
    </div>
</div>

